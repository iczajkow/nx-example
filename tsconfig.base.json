{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@fullapp-example/api-feature-projects": [
        "libs/api-feature-projects/src/index.ts"
      ],
      "@fullapp-example/client-feature-projects": [
        "libs/client-feature-projects/src/index.ts"
      ],
      "@fullapp-example/common": ["libs/common/src/index.ts"],
      "@fullapp-example/common-feature-projects": [
        "libs/common-feature-projects/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
